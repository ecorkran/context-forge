{
  "name": "@context-forge/electron",
  "private": true,
  "version": "0.0.0",
  "description": "Context Forge - AI project context generation tool (Electron app)",
  "main": "./out/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build-with-tsc": "tsc -b && electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "postinstall": "echo 'Skipping native deps for template'",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "ai:dev": "pnpm run dev",
    "ai:build": "pnpm run build && pnpm run package",
    "ai:clean": "rm -rf out node_modules && pnpm install",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ai:test": "pnpm run typecheck && pnpm run lint && pnpm run test:run",
    "ai:setup": "pnpm install && pnpm run typecheck",
    "setup-guides": "cd ../.. && mkdir -p project-documents/user/{analysis,architecture,features,project-guides,reviews,slices,tasks} && git submodule add https://github.com/ecorkran/ai-project-guide.git project-documents/ai-project-guide && echo '# Keep user/ in version control' > project-documents/user/.gitkeep || echo 'Submodule already existsâ€”run npm run update-guides to update.'",
    "update-guides": "cd ../.. && git submodule update --remote project-documents/ai-project-guide"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "tailwind",
    "vite",
    "context-forge"
  ],
  "author": "Manta Templates",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@context-forge/core": "workspace:*",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react-router-dom": "^5.3.3",
    "@types/three": "^0.179.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colord": "^2.9.3",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.507.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.5",
    "react-router-dom": "^7.8.2",
    "tailwind-merge": "^3.3.1",
    "three": "^0.179.1",
    "tw-animate-css": "^1.3.7",
    "zod": "^4.1.5"
  },
  "build": {
    "appId": "com.context-forge.app",
    "files": [
      "out/**",
      "resources/**"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
